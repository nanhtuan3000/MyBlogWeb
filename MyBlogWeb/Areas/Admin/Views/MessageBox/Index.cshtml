
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section headscripts{
    <!-- Custom styles for this page -->
    <link href="~/Assets/Admin/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}
@section header{
    Hòm thư
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên người gửi</th>
                        <th>Câu hỏi</th>
                        <th>Ngày gửi</th>
                        <th>Câu trả lời</th>
                        <th>Ngày trả lời</th>
                        <th>Người trả lời</th>
                        <th>Trạng thái</th>
                        <th>Trả lời</th>
                        <th>Xóa</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>UserName</th>
                        <th>Detail</th>
                        <th>CreateDate</th>
                        <th>Answer</th>
                        <th>AnswerDate</th>
                        <th>AnswerBy</th>
                        <th>Status</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </tfoot>
            </table>

        </div>
    </div>
</div>

@section scripts{
    <!-- Page level plugins -->
    <script src="~/Assets/Admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Assets/Admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>    
    <script src="~/Assets/Admin/vendor/datatables/moment.min.js"></script>
    <script src="~/Assets/Admin/vendor/datatables/datetime-moment.js"></script>
    <script src="~/Assets/Admin/js/controller/MessageBoxController.js"></script>
}




